<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.utumbi_project">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SignupActivity"></activity>
        <activity android:name=".StudentEditProfileActivity" />
        <activity android:name=".StudentDetailsActivity" />
        <activity android:name=".StudentHomeActivity" />
        <activity
            android:name=".AdminDashboardActivity"
            android:label="@string/title_activity_admin_dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".OfficerDashboardActivity"
            android:label="@string/title_activity_officer_dashboard" />
        <activity android:name=".LoginRouterActivity" />
        <activity
            android:name=".StudentDashboardActivity"
            android:label="@string/title_activity_student_dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddStudentActivity" />
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
